-- Books Table: Stores information about available books
CREATE TABLE `Books` (
  `id` int PK,
  `Title` varchar(255),
  `ISBN` varchar(255),
  `publication_year` date,
  `language` varchar(255),
  `available_quantity` int
);

-- Authors Table: Stores information about book authors
CREATE TABLE `Author` (
  `author_id` int PK,
  `name` varchar(255),
  `birth_date` date,
  `nationality` varchar(255)
);

-- Publishers Table: Stores information about book publishers
CREATE TABLE `Publisher` (
  `publisher_id` int Pk
  `name` varchar(255),
  `location` varchar(255)
);

-- Genre Table: Stores information about book genres
CREATE TABLE `Genre` (
  `genre_id` int Pk,
  `name` varchar(255)
);

-- Intermediate Table BookAuthor: Relates books to authors
CREATE TABLE `BookAuthor` (
  `bookauthor_id` int PRIMARY KEY,
  `book_id` int,
  `author_id` int,
 FK(`book_id`) REFERENCES `Books` (`id`),
 FK(`author_id`) REFERENCES `Author` (`author_id`)
);

-- Intermediate Table BookGenre: Relates books to genres
CREATE TABLE `BookGenre` (
  `bookgenre_id` int PRIMARY KEY,
  `book_id` int,
  `genre_id` int,
  FOREIGN KEY (`book_id`) REFERENCES `Books` (`id`),
  FOREIGN KEY (`genre_id`) REFERENCES `Genre` (`genre_id`)
);
